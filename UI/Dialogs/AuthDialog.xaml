<ContentDialog
    x:Class="Ganymede.UI.Dialogs.AuthDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sign In"
    PrimaryButtonText="Sign In"
    PrimaryButtonClick="Login_Click"
    CloseButtonText="Cancel">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox Name="UsernameInput" PlaceholderText="Username"/>
        <PasswordBox Name="PasswordInput" PlaceholderText="Password" IsPasswordRevealButtonEnabled="True" Margin="0,20,0,10"/>
        <TextBlock Name="ErrorText" Text="" Style="{StaticResource CaptionTextBlockStyle}" Foreground="Red"/>
    </StackPanel>
</ContentDialog>
